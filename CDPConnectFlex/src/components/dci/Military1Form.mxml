<?xml version="1.0" encoding="utf-8"?>
<dci:DCIForm xmlns:fx="http://ns.adobe.com/mxml/2009" 
			 xmlns:s="library://ns.adobe.com/flex/spark" 
			 xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:dci="components.dci.*" width="100%" height="100%">
	<fx:Script>
		<![CDATA[
			import components.questions.QuestionClass;
			import components.questions.QuestionList;
			import components.questions.QuestionText;
			import components.skips.SkipMultipleHandler;
			import components.validators.Valid;
			
			import mx.collections.ArrayList;
			import mx.containers.FormItem;
			
			public var qMilitaryServed:QuestionList = new QuestionList("MilitaryServed","Have you ever served on active, reserve, or National Guard duty?",ynrd,1);
			public var qMilitaryBranch:QuestionList = new QuestionList("MilitaryBranch","In what branch of the military/uniformed services did you serve?",new ArrayList(["Army","Marine Corps","Navy","Air Force","Coast Guard","PHS","NOAA",REFUSED_VALUE,DONT_KNOW_VALUE]),0);
			public var qMilitaryComponent:QuestionList = new QuestionList("MilitaryComponent","In which component did you serve?",new ArrayList(["Active","Reserve","National Guard",REFUSED_VALUE,DONT_KNOW_VALUE]),0);
			public var qActiveDuty:QuestionList = new QuestionList("ActiveDuty","Are you currently on active duty or are you separated or retired?",new ArrayList(["On active duty","Separated","Retired",REFUSED_VALUE,DONT_KNOW_VALUE]),0);
			public var qNeverDeployed:QuestionList = new QuestionList("NeverDeployed","Have you ever been deployed to a combat zone?",ynrd,1);//Change this to EverDeployed
			public var qIraqAfghanistan:QuestionList = new QuestionList("IraqAfghanistan","Iraq or Afghanistan",yn,1);
			public var qPersianGulf:QuestionList = new QuestionList("PersianGulf","Persian Gulf",yn,1);
			public var qVietnamSoutheastAsia:QuestionList = new QuestionList("VietnamSoutheastAsia","Vietnam/Southeast Asia",yn,1);
			public var qKorea:QuestionList = new QuestionList("Korea","Korea",yn,1);
			public var qWWII:QuestionList = new QuestionList("WWII","World War II",yn,1);
			public var qDeployedOther:QuestionList = new QuestionList("DeployedOther","Other combat zone",yn,1);
			public var qDeployedOtherSpec:QuestionText = new QuestionText("DeployedOtherSpec","Other (Specify)","");
			
			//Military1 Form Area
			public override function createForm():void
			{
				viewstackIndex = 6;
				
				//Questions
				addQuestion(qMilitaryServed, 175);
				addQuestion(qMilitaryBranch, 175);
				addQuestion(qMilitaryComponent, 175);
				addQuestion(qActiveDuty, 175);
				addQuestion(qNeverDeployed);
				createText("IF YES, which combat zones?","h1");
				addQuestion(qIraqAfghanistan);
				addQuestion(qPersianGulf);
				addQuestion(qVietnamSoutheastAsia);
				addQuestion(qKorea);
				addQuestion(qWWII);
				addQuestion(qDeployedOther);
				addQuestion(qDeployedOtherSpec);
				
				//Validators
				Valid.addRequiredValidator(qDeployedOtherSpec);
				qDeployedOtherSpec.answerType = String;
				
				//Control Logic
				addSkipDropDown(qMilitaryServed,[NO_VALUE,REFUSED_VALUE,DONT_KNOW_VALUE],[qMilitaryBranch,qMilitaryComponent,qActiveDuty,qNeverDeployed]);
				addSkipDropDown(qNeverDeployed,[YES_VALUE],[qIraqAfghanistan,qPersianGulf,qVietnamSoutheastAsia,qKorea,qWWII,qDeployedOther],true);
				addSkipDropDown(qDeployedOther,[NO_VALUE],[qDeployedOtherSpec]);
			}
		]]>
	</fx:Script>
